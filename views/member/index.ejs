<%- include('../templates/header.ejs', {title: 'Members' }) %>
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <h1>Members</h1>
                        <a class="btn btn-primary" href="/members/add">Add Member</a>
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered mt-2">
                                <thead>
                                    <tr>
                                        <th scope="col">No</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Gender</th>
                                        <th scope="col">Member</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% data.forEach((el,i)=> { %>
                                        <tr>
                                            <th scope="row">
                                                <%= i+1 %>
                                            </th>
                                            <td>
                                                <%= el.name %>
                                            </td>
                                            <td>
                                                <%= el.email %>
                                            </td>
                                            <td>
                                                <%= el.gender %>
                                            </td>
                                            <td>
                                                <%= el.member %>
                                            </td>
                                            <td>
                                                <a class="btn btn-warning" href="/members/<%= el.id %>/edit">Edit</a> <a
                                                    class="btn btn-danger"
                                                    href="/members/<%= el.id %>/delete">Delete</a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../templates/footer.ejs') %>