<%- include('templates/header.ejs', {title:'Fitness'}) %>
    <!-- Hero Section -->
    <div class="hero">
        <div class="hero__content">
            <h1>MY FIT</h1>
            <p>All your fitness needs are here </p>
            <a href="/" class="button-hero">Register Now</a>
        </div>
    </div>
    <!-- Services Section -->
    <div class="services">
        <div class="services__container">
            <div>
                <p class="topline">Features</p>
                <h1 class="services__heading">What we offer</h1>
                <div class="services__features">
                    <p class="services_feature"><i class="fas fa-check-circle"></i>Group Fitness Classes</p>
                </div>
                <div class="services__features">
                    <p class="services_feature"><i class="fas fa-check-circle"></i>Personal Trainer Sessions</p>
                </div>
                <div class="services__features">
                    <p class="services_feature"><i class="fas fa-check-circle"></i>Indoor Pool</p>
                </div>
                <div class="services__features">
                    <p class="services_feature"><i class="fas fa-check-circle"></i>Steam Room and Sauna</p>
                </div>
                <div class="services__features">
                    <p class="services_feature"><i class="fas fa-check-circle"></i>Basketball Court</p>
                </div>
                <div class="services__features">
                    <p class="services_feature"><i class="fas fa-check-circle"></i>Open 24/7</p>
                </div>
            </div>
            <div>
                <img src="/img/gym-1.jpg" alt="gym" class="services__img">
            </div>
        </div>
    </div>
    <!-- Membership Section -->
    <div class="membership">
        <h1>View Our Plans</h1>
        <p class="membership__desc">
            Get started today and receive 25% off your first month
        </p>
        <div class="membership__wrapper">
            <div class="membership__card">
                <div class="membership__title">
                    <i class="fas fa-dumbbell card-icon"></i>
                    <h3>Silver</h3>
                </div>
                <div class="memberships__perks">
                    <p>Get access to the entire gym</p>
                    <p>$29 per month</p>
                </div>
                <a href="/" class="button-hero">Register Now</a>
            </div>
            <div class="membership__card">
                <div class="membership__title">
                    <i class="fas fa-bicycle card-icon"></i>
                    <h3>Gold</h3>
                </div>
                <div class="memberships__perks">
                    <p>Get access to the entire gym</p>
                    <p>Group Fitness Classes</p>
                    <p>$39 per month</p>
                </div>
                <a href="/" class="button-hero">Register Now</a>
            </div>
            <div class="membership__card">
                <div class="membership__title">
                    <i class="fas fa-crown card-icon"></i>
                    <h3>Platinum</h3>
                </div>
                <div class="memberships__perks">
                    <p>Get access to the entire gym</p>
                    <p>Group Fitness Classes</p>
                    <p>Private Personal Training</p>
                    <p>$49 per month</p>
                </div>
                <a href="/" class="button-hero">Register Now</a>
            </div>
        </div>
    </div>
    <!-- Team Section -->
    <div class="team">
        <div class="team__wrapper">
            <div class="team__text">
                <p class="topline">
                    Private Coaching
                </p>
                <h1>Meet Our Trainers</h1>
                <p class="team__desc">
                    All our personal trainers have over 30 years of experience combined. Each trainer specialize in
                    strength and mobility workouts.
                </p>
            </div>
            <div class="team__text">
                <p class="topline">
                    Free Trial
                </p>
                <h1>7 Days Trial</h1>
                <p class="team__desc">
                    You can work with each trainer for up to 7 days for free in order to see if they are a good fit for
                    your goals.
                </p>
            </div>
            <div class="team__card">
                <p>Sarah</p>
                <img src="/img/girl-1.jpg" alt="" class="team__img">
            </div>
            <div class="team__card">
                <p>Leo</p>
                <img src="/img/boy-1.jpg" alt="" class="team__img">
            </div>
            <div class="team__card">
                <p>Hana</p>
                <img src="/img/girl-2.jpg" alt="" class="team__img">
            </div>
            <div class="team__card">
                <p>James</p>
                <img src="/img/boy-2.jpg" alt="" class="team__img">
            </div>
        </div>
    </div>
    <!-- Email Section -->
    <div class="email">
        <div class="email__content">
            <h1>Get Access to Members Only Perks</h1>
            <p>Register for our newsletter below to get $100 off your first personal training session!</p>
            <form action="#">
                <div class="form__wrap">
                    <label for="email">
                        <input type="email" placeholder="Enter your email" id="email">
                    </label>
                    <button class="button-hero" type="submit">Register Now</button>
                </div>
            </form>
        </div>
    </div>
    <!-- Footer Section -->
    <%- include('templates/footer.ejs') %>